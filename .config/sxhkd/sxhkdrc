# Basic binds
alt + Return
	$TERMINAL
super + Return
    tabbed -r 2 $TERMINAL -w ''
super + r
	$TERMINAL -e $FILE

# Social
super + shift + m
	spotify
super + shift + n
	discord

# Tools
super + e
    code
super + c
	$TERMINAL -e python3
super + w
	$BROWSER
super + shift + w
    dmenunet
super + n
    ~/dox/dow/Joplin* --no-sandbox
super + shift + p
    ~/dox/dow/Bitwarden* --no-sandbox
super + shift + b
    burpsuite
super + shift + a
    pavucontrol
super + shift + t
    todo

# System stuff
super + shift + x
	prompt "Shutdown computer?" "sudo -A shutdown -h now"
super + shift + BackSpace
	prompt "Reboot computer?" "sudo -A reboot"
super + x
	slock
super + shift + c
    notify-send -t 10000 "CALENDAR" "$(ncal -h)"

# Take screenshot
Print
    flameshot gui
shift + Print
	maimpick

# Video recording
super + shift + r
    dmenurecord

# Mount a USB drive or Android device
super + {F9,F10}
	{dmenumount,dmenuumount}

# Keyboard controlZ
# pactl list sinks short to get the id
# my headset is 1
XF86Audio{Raise,Lower}Volume
    pactl set-sink-mute 1 false ; pactl set-sink-volume 1 {+,-}5%
XF86AudioMute
    pactl set-sink-mute 1 toggle
