# Basic binds
super + Return
	$TERMINAL
super + r
	$TERMINAL -e $FILE
super + shift + m
	spotify
super + shift + n
	discord
super + c
	$TERMINAL -e python
super + w
	$BROWSER
super + shift + w
    dmenuwifi
super + n
    joplin --no-sandbox
super + shift + b
    burpsuite
super + shift + a
    pavucontrol


# Et cetera...
super + shift + x
	prompt "Shutdown computer?" "sudo -A shutdown -h now"
super + shift + BackSpace
	prompt "Reboot computer?" "sudo -A reboot"
super + x
	slock
super + shift + c
    notify-send -t 10000 "CALENDAR" "$(ncal -h)"

# Take screenshot
Print
	maimpick

# Mount a USB drive or Android device
super + {F9,F10}
	{dmenumount,dmenuumount}


# Keyboard controlZ
# pactl list sinks short to get the id
# my headset is 1
XF86Audio{Raise,Lower}Volume
    pactl set-sink-mute 1 false ; pactl set-sink-volume 1 {+,-}5%
XF86AudioMute
    pactl set-sink-mute 1 toggle

